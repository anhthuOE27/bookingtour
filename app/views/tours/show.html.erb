<div class="row">
  <div class="introduction_tour">
    <p>
      <%= link_to @tours.name %>
    </p>
    <p>
      <%= link_to t ".price"%>
      <%= number_to_currency(@tours.price) %>
    </p>
    <p>
      <%= link_to t ".food"%>
    </p>
    <p><%= @tours.food %></p>
    <p>
      <%= link_to t ".place" %>
    </p>
    <p><%= @tours.place %></p>
    <p><%= link_to t ".image" %></p>
    <div class="image_tour">
      <%= render partial: "shared/imagerelation", collection: @tours.imagerelations %>
    </div>
  </div>
<div class="row">
  <div class="comment_of_tour">
    <div class="tilte_comment">
      <p><%= t ".comment" %></p>
    </div>
    <%= form_for(:comment, url: tour_comments_url(@tours)) do |f| %>
      <%= f.text_area :content, cols: 10, rows: 5,
        placeholder: "#{t ".comment"}", class: "form-control, input100" %>
      <button class="button_show"><%= t ".comment" %></button>
    <% end %>
    <%= render partial: "comments/comment", collection: @comments %>
  </div>
</div>
