<div class="row">
  <div class="introduction_tour">
    <p>
      <%= link_to @review.tour_name %>
    </p>
    <%= @review.content %>
    <div class="image_tour">
      <%= render partial: "shared/imagerelation", collection: @review.imagerelations %>
    </div>
  </div>
<div class="row">
  <div class="comment_of_tour">
    <div class="tilte_comment">
      <p><%= t ".comment" %></p>
    </div>
    <%= form_for(:comment, url: review_comments_url(@review)) do |f| %>
      <%= f.text_area :content, cols: 10, rows: 5,
        placeholder: "#{t ".comment"}", class: "form-control, input100" %>
      <button class="button_show"><%= t ".comment" %></button>
    <% end %>
    <%= render partial: "comments/comment", collection: @comments %>
  </div>
</div>
